<Window x:Class="KNXBoostDesktop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600" Width="500"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#F5F5F5"
        Closing="ClosingSettingsWindow"
        PreviewKeyDown="SettingsWindow_PreviewKeyDown">

    <Window.Resources>
        <!-- Brush pour le style des checkbox -->
        <SolidColorBrush x:Key="LightThemeCheckBoxBorderBrush" Color="Gray" />
        <SolidColorBrush x:Key="LightThemeCheckBoxCheckedBackgroundBrush" Color="#DBEAFF" />
        <SolidColorBrush x:Key="LightThemeCheckBoxUncheckedBackgroundBrush" Color="White" />
        <SolidColorBrush x:Key="LightThemeCheckBoxHoverBackgroundBrush" Color="#D3D3D3" />
        <SolidColorBrush x:Key="LightThemeCheckMarkBrush" Color="#4071B4" />

        <SolidColorBrush x:Key="DarkThemeCheckBoxBorderBrush" Color="#434343" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxCheckedBackgroundBrush" Color="#3E70B4" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxUncheckedBackgroundBrush" Color="#313131" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxUncheckedHoverBackgroundBrush" Color="#404040" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxCheckedHoverBackgroundBrush" Color="#5D8AC7" />
        <SolidColorBrush x:Key="DarkThemeCheckMarkBrush" Color="#B7D4FF" />


        <!-- Style pour les checkbox (cases à cocher) -->
        <Style x:Key="CheckboxLightThemeStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid Width="15" Height="15" VerticalAlignment="Center" Margin="0,0,5,0">
                                <Border x:Name="Border"
                                        BorderBrush="{StaticResource LightThemeCheckBoxBorderBrush}"
                                        BorderThickness="1"
                                        Background="{StaticResource LightThemeCheckBoxUncheckedBackgroundBrush}">
                                    <Path x:Name="CheckMark"
                                          Data="M 0 0.5 L 0.2 0.8 L 0.7 0.2"
                                          Stretch="Uniform"
                                          Margin="2"
                                          Stroke="{StaticResource LightThemeCheckMarkBrush}"
                                          StrokeThickness="2"
                                           />
                                </Border>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource LightThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightThemeCheckBoxUncheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource LightThemeCheckBoxBorderBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightThemeCheckBoxHoverBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CheckboxDarkThemeStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid Width="15" Height="15" VerticalAlignment="Center" Margin="0,0,5,0">
                                <Border x:Name="Border"
                                        BorderBrush="{StaticResource DarkThemeCheckBoxBorderBrush}"
                                        BorderThickness="1"
                                        Background="{StaticResource DarkThemeCheckBoxUncheckedBackgroundBrush}">
                                    <Path x:Name="CheckMark"
                                          Data="M 0 0.5 L 0.2 0.8 L 0.7 0.2"
                                          Stretch="Uniform"
                                          Margin="2"
                                          Stroke="{StaticResource DarkThemeCheckMarkBrush}"
                                          StrokeThickness="2"
                                           />
                                </Border>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource DarkThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxUncheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource DarkThemeCheckBoxBorderBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <!-- MultiTrigger for mouse over when checked -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxCheckedHoverBackgroundBrush}" />
                            </MultiTrigger>
                            <!-- MultiTrigger for mouse over when unchecked -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="False" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxUncheckedHoverBackgroundBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Style pour le bouton de fermeture de la fenêtre -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C75150" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Image Width="16" Height="16" Margin="5,0,5,0" VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
                                                <DrawingGroup Opacity="1">
                                                    <DrawingGroup Opacity="1">
                                                        <GeometryDrawing Brush="White"
                                                                         Geometry="F1 M200,200z M0,0z M99.63,120.8C72.17,148.17 46.48,173.78 20.39,199.78 13.61,192.76 7.41,186.34 0,178.66 25.77,153.17 51.75,127.46 77.55,101.93 51.64,76.29 25.89,50.81 0.71,25.89 8.13,18.48 14.31,12.29 20.73,5.88 45.36,30.49 71.13,56.23 96.6,81.68 124.58,53.7 151.26,27.02 178.29,0 186.31,8.18 192.53,14.53 200,22.15 173.32,48.58 146.55,75.1 119.98,101.43 146.76,127.82 173.39,154.06 199.66,179.93 191.94,187.46 185.67,193.59 179.11,200 153.67,174.65 127.03,148.11 99.63,120.8z" />
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B73B3B" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
