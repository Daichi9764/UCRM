<Window x:Class="KNXBoostDesktop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="500"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#F5F5F5"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Closing="ClosingSettingsWindow"
        PreviewKeyDown="SettingsWindow_PreviewKeyDown">

    <Window.Resources>
        
        <!-- ************************ Style pour les checkbox (cases à cocher) ************************ -->
        <SolidColorBrush x:Key="LightThemeCheckBoxBorderBrush" Color="Gray" />
        <SolidColorBrush x:Key="LightThemeCheckBoxCheckedBackgroundBrush" Color="#DBEAFF" />
        <SolidColorBrush x:Key="LightThemeCheckBoxUncheckedBackgroundBrush" Color="White" />
        <SolidColorBrush x:Key="LightThemeCheckBoxHoverBackgroundBrush" Color="#D3D3D3" />
        <SolidColorBrush x:Key="LightThemeCheckMarkBrush" Color="#4071B4" />

        <SolidColorBrush x:Key="DarkThemeCheckBoxBorderBrush" Color="#434343" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxCheckedBackgroundBrush" Color="#3E70B4" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxUncheckedBackgroundBrush" Color="#313131" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxUncheckedHoverBackgroundBrush" Color="#404040" />
        <SolidColorBrush x:Key="DarkThemeCheckBoxCheckedHoverBackgroundBrush" Color="#5D8AC7" />
        <SolidColorBrush x:Key="DarkThemeCheckMarkBrush" Color="#B7D4FF" />
        
        <Style x:Key="CheckboxLightThemeStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid Width="15" Height="15" VerticalAlignment="Center" Margin="0,0,5,0">
                                <Border x:Name="Border"
                                        BorderBrush="{StaticResource LightThemeCheckBoxBorderBrush}"
                                        BorderThickness="1"
                                        Background="{StaticResource LightThemeCheckBoxUncheckedBackgroundBrush}">
                                    <Path x:Name="CheckMark"
                                          Data="M 0 0.5 L 0.2 0.8 L 0.7 0.2"
                                          Stretch="Uniform"
                                          Margin="2"
                                          Stroke="{StaticResource LightThemeCheckMarkBrush}"
                                          StrokeThickness="2"
                                           />
                                </Border>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource LightThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightThemeCheckBoxUncheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource LightThemeCheckBoxBorderBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource LightThemeCheckBoxHoverBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CheckboxDarkThemeStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid Width="15" Height="15" VerticalAlignment="Center" Margin="0,0,5,0">
                                <Border x:Name="Border"
                                        BorderBrush="{StaticResource DarkThemeCheckBoxBorderBrush}"
                                        BorderThickness="1"
                                        Background="{StaticResource DarkThemeCheckBoxUncheckedBackgroundBrush}">
                                    <Path x:Name="CheckMark"
                                          Data="M 0 0.5 L 0.2 0.8 L 0.7 0.2"
                                          Stretch="Uniform"
                                          Margin="2"
                                          Stroke="{StaticResource DarkThemeCheckMarkBrush}"
                                          StrokeThickness="2"
                                           />
                                </Border>
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource DarkThemeCheckBoxCheckedBackgroundBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxUncheckedBackgroundBrush}" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource DarkThemeCheckBoxBorderBrush}" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background"
                                        Value="#404040" />
                                <Setter TargetName="Border" Property="BorderBrush"
                                        Value="{StaticResource DarkThemeCheckBoxBorderBrush}" />
                            </Trigger>
                            <!-- MultiTrigger for mouse over when checked -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxCheckedHoverBackgroundBrush}" />
                            </MultiTrigger>
                            <!-- MultiTrigger for mouse over when unchecked -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="False" />
                                    <Condition Property="IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource DarkThemeCheckBoxUncheckedHoverBackgroundBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        
        
        <!-- ************************ Style pour le bouton de fermeture de la fenêtre ************************ -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C75150" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Image Width="16" Height="16" Margin="5,0,5,0" VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
                                                <DrawingGroup Opacity="1">
                                                    <DrawingGroup Opacity="1">
                                                        <GeometryDrawing Brush="White"
                                                                         Geometry="F1 M200,200z M0,0z M99.63,120.8C72.17,148.17 46.48,173.78 20.39,199.78 13.61,192.76 7.41,186.34 0,178.66 25.77,153.17 51.75,127.46 77.55,101.93 51.64,76.29 25.89,50.81 0.71,25.89 8.13,18.48 14.31,12.29 20.73,5.88 45.36,30.49 71.13,56.23 96.6,81.68 124.58,53.7 151.26,27.02 178.29,0 186.31,8.18 192.53,14.53 200,22.15 173.32,48.58 146.55,75.1 119.98,101.43 146.76,127.82 173.39,154.06 199.66,179.93 191.94,187.46 185.67,193.59 179.11,200 153.67,174.65 127.03,148.11 99.63,120.8z" />
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B73B3B" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        
        
        <!-- ************************ Style pour les boutons en bas de la fenêtre ************************ -->
        <Style x:Key="BottomButtonLight" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D3D3D3"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#a8a8a8"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="BottomButtonDark" TargetType="Button">
            <Setter Property="Background" Value="#262626"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#434343"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#313131"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
       

        <!-- ************************ Style pour les menus déroulants (Combobox) ************************ -->
        <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#333333"/>
        <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#E3DED4"/>
        <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#444444"/>
        <SolidColorBrush x:Key="ComboBoxMouseOverBrush" Color="#555555"/>
        <SolidColorBrush x:Key="ComboBoxPressedBrush" Color="#666666"/>
        <SolidColorBrush x:Key="ComboBoxItemBackgroundBrush" Color="#444444"/>
        <SolidColorBrush x:Key="ComboBoxItemMouseOverBrush" Color="#444444"/>
        <SolidColorBrush x:Key="ComboBoxItemSelectedBrush" Color="#666666"/>
        
        <SolidColorBrush x:Key="ComboBoxNormalBorderBrush" Color="#434343" />
        
        <SolidColorBrush x:Key="ComboBoxLightBorder" Color="#b8b8b8"/>
        <SolidColorBrush x:Key="ComboBoxForegroundBrushLight" Color="#000000"/>
        
        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#729CD5" TargetName="Border"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource LightThemeCheckMarkBrush}" TargetName="Border"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate2" TargetType="ToggleButton">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border x:Name="templateRoot"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource ComboBoxNormalBorderBrush}" 
                        BorderThickness="1"
                        Grid.RowSpan="2"
                        CornerRadius="2"/>
                <Border x:Name="border" 
                        BorderBrush="{StaticResource ComboBoxNormalBorderBrush}"
                        BorderThickness="1" 
                        Background="{TemplateBinding Background}" 
                        Grid.RowSpan="2" 
                        CornerRadius="0"/>
                <Path x:Name="Arrow"
                      HorizontalAlignment="Right"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0 Z"
                      Fill="{StaticResource ComboBoxForegroundBrush}"/>
            </Grid>
        </ControlTemplate>
        
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrush}"/>
            <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/> <!-- Adjust border thickness here -->
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItemStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Template="{StaticResource ComboBoxToggleButtonTemplate2}"
                                          Grid.Column="2"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Background>
                                    <StaticResource ResourceKey="ComboBoxBackgroundBrush"/>
                                </ToggleButton.Background>
                                <ToggleButton.Foreground>
                                    <StaticResource ResourceKey="ComboBoxForegroundBrush"/>
                                </ToggleButton.Foreground>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="7,3,23,3"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{StaticResource ComboBoxBackgroundBrush}"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource ComboBoxBorderBrush}"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasDropShadow" SourceName="Popup" Value="True">
                                <Setter Property="Margin" TargetName="DropDown" Value="0,0,5,5"/>
                                <Setter Property="SnapsToDevicePixels" TargetName="DropDown" Value="True"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="ToggleButton" Value="{StaticResource ComboBoxMouseOverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        
        <Style x:Key="LightComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrushLight}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#729CD5" TargetName="Border"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource LightThemeCheckMarkBrush}" TargetName="Border"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplateLight" TargetType="ToggleButton">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border x:Name="templateRoot"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource ComboBoxLightBorder}" 
                        BorderThickness="1"
                        Grid.RowSpan="2"
                        CornerRadius="2"/>
                <Border x:Name="border" 
                        BorderBrush="{StaticResource ComboBoxLightBorder}"
                        BorderThickness="1" 
                        Background="{TemplateBinding Background}" 
                        Grid.RowSpan="2" 
                        CornerRadius="0"/>
                <Path x:Name="Arrow"
                      HorizontalAlignment="Right"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0 Z"
                      Fill="{StaticResource ComboBoxForegroundBrushLight}"/>
            </Grid>
        </ControlTemplate>
        
        <Style x:Key="LightComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource ComboBoxForegroundBrushLight}"/>
            <Setter Property="Background" Value="{StaticResource LightThemeCheckBoxUncheckedBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ComboBoxLightBorder}"/>
            <Setter Property="BorderThickness" Value="1"/> <!-- Adjust border thickness here -->
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource LightComboBoxItemStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Template="{StaticResource ComboBoxToggleButtonTemplateLight}"
                                          Grid.Column="2"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Background>
                                    <StaticResource ResourceKey="LightThemeCheckBoxUncheckedBackgroundBrush"/>
                                </ToggleButton.Background>
                                <ToggleButton.Foreground>
                                    <StaticResource ResourceKey="ComboBoxForegroundBrushLight"/>
                                </ToggleButton.Foreground>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="7,3,23,3"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{StaticResource LightThemeCheckBoxUncheckedBackgroundBrush}"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource ComboBoxLightBorder}"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasDropShadow" SourceName="Popup" Value="True">
                                <Setter Property="Margin" TargetName="DropDown" Value="0,0,5,5"/>
                                <Setter Property="SnapsToDevicePixels" TargetName="DropDown" Value="True"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="ToggleButton" Value="{StaticResource LightThemeCheckBoxHoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource LightThemeCheckBoxHoverBackgroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        
        
        
        
        <!-- ************************ Style pour les onglets ************************ -->
        <Style x:Key="LightOnglet" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border" Background="White" BorderBrush="#b8b8b8" BorderThickness="1,1,1,0" CornerRadius="0" Padding="10,5">
                                <Grid>

                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Panel.ZIndex" Value="1" />
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/> <!-- Supprimer la bordure en bas -->
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,1"/> <!-- Rétablir la bordure en bas -->
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#D3D3D3"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#D3D3D3"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DarkOnglet" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border" Background="#262626" BorderBrush="#434343" BorderThickness="1,1,1,0" CornerRadius="0" Padding="10,5">
                                <Grid>

                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Panel.ZIndex" Value="1" />
                                <Setter TargetName="Border" Property="Background" Value="#262626"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#313131"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,1,1,1"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#404040"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#404040"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border BorderBrush="#369226" 
            BorderThickness="1" x:Name="SettingsWindowBorder">
        <Grid x:Name="MainGrid">

            <Grid.RowDefinitions>
                               <RowDefinition Height="60" /> <!-- En-tête (header) -->
                               <RowDefinition Height="*" /> <!-- Contenu de la fenêtre (corps) -->
                               <RowDefinition Height="50" /> <!-- Footer avec les boutons save/cancel -->
                           </Grid.RowDefinitions>
               
                           <!-- En-tête de la fenêtre -->
                           <Viewbox Grid.Row="0" HorizontalAlignment="Left" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                               <StackPanel Orientation="Vertical" Background="Transparent" Width="500" Margin="0">
                                   <!-- Icone + titre paramètres -->
                                   <StackPanel Orientation="Horizontal">
                                       <Image Height="30" Width="30" Margin="14,10,5,0" VerticalAlignment="Center">
                                           <Image.Source>
                                               <DrawingImage>
                                                   <DrawingImage.Drawing>
                                                       <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
