<Window x:Class="KNXBoostDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:KNXBoostDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#F5F5F5"
        Closing="ClosingMainWindow">


    <Window.Resources>
        <!-- Style pour le bouton Import KNX Project -->
        <Style x:Key="ImportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6200EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF3700B3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3700B3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF6200EE"/>
                    <Setter Property="BorderBrush" Value="#FF6200EE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour un autre bouton -->
        <Style x:Key="AnotherButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF009688"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF00796B"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF00796B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF009688"/>
                    <Setter Property="BorderBrush" Value="#FF009688"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style la synchronisation des arbres -->
        <Style x:Key="TreeViewItemStyle" TargetType="{x:Type TreeViewItem}">
            <EventSetter Event="Expanded" Handler="TreeViewItem_Expanded"/>
            <EventSetter Event="Collapsed" Handler="TreeViewItem_Collapsed"/>
        </Style>
        
        <Style x:Key="Hover" TargetType="Button">
            <Setter Property="Background" Value="#4071B4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="0,0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="#4071B4"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#355e97"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#355e97"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>

    <Border BorderBrush="#369226" BorderThickness="1" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Recherche et boutons -->
                <RowDefinition Height="*"/>
                <!-- Scroll Horizontal -->
                <RowDefinition Height="Auto"/>
                <!-- Temporaire avec ouvrir console -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <!-- Boutons et arbres -->
                <ColumnDefinition Width="*"/>
                <!-- Scroll Verical -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>



            <!-- Recherge et Boutons -->
    <Grid Margin="10" d:DataContext="{d:DesignInstance }">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Search Button on the left -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="White" Margin="0">
                        <DockPanel Width="150" Height="20">
                            <!-- Image de loupe -->
                            <Image Source="pack://application:,,,/resources/loupe.png" Width="10" Height="10" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>

                            <!-- TextBox avec texte temporaire -->
                            <TextBox x:Name="txtSearch1" VerticalContentAlignment="Center" Margin="0,0,0,0" BorderThickness="0" Background="Transparent"
                                     Foreground="Gray" Text="Chercher..."
                                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Other Buttons on the right -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <!-- Import Button -->
            <Button Name="chargerProjet" 
                    Style="{StaticResource Hover}" 
                    Click="ImportProjectButtonClick" 
                    Width="200" Height="20" 
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" 
                           Source="pack://application:,,,/resources/download.png" 
                           Width="15" Height="15" 
                           Margin="-15,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Charger un nouveau projet" Margin="5,0,-5,0"/>
                </Grid>
            </Button>
            
            <!-- Parameters Button -->
            <Button Width="20" Height="20" Click="OpenParameters" Margin="0,0,10,0" Background="White" BorderThickness="1" BorderBrush="DarkGray">
                <Image x:Name="parametersImage" Width="15" Height="15" Source="pack://application:,,,/resources/settingsIcon.png"/>
            </Button>
            
            <!-- Export Button -->
            <Button Width="200" Height="20" Style="{StaticResource Hover}" IsEnabled="{Binding IsProjectImported}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="pack://application:,,,/resources/upload.png" Width="15" Height="15" Margin="-15,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="exportProjet" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Exporter le projet modifié" Margin="5,0,-5,0"/>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>


            <!-- Arbres  -->
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <ScrollViewer Grid.Row="1" Grid.Column="0" Name="scrollViewer1" ScrollChanged="ScrollViewer_ScrollChanged" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" VerticalScrollBarVisibility="Hidden">

                    <TreeView x:Name="treeView1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" ItemContainerStyle="{StaticResource TreeViewItemStyle}"/>
                </ScrollViewer>

                <!-- GridSplitter to adjust the width of the TreeViews -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                <ScrollViewer Grid.Row="1" Grid.Column="2" Name="scrollViewer2" ScrollChanged="ScrollViewer_ScrollChanged" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" VerticalScrollBarVisibility="Auto">
                    <TreeView x:Name="treeView2" Margin="10" ItemContainerStyle="{StaticResource TreeViewItemStyle}"/>
                </ScrollViewer>

            </Grid>


            <!-- Vertical ScrollBar for the right TreeView -->
            <ScrollBar Grid.Row="1" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>

            <!-- Horizontal ScrollBar spanning both TreeViews -->
            <ScrollBar Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>

            <!-- Buttons de la console -->
            <StackPanel Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Margin="10">
                <Button Name="OpenConsoleButton" Click="OpenConsoleButtonClick" Content="Ouvrir la console" Style="{StaticResource AnotherButtonStyle}" Width="250" Margin="5"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>