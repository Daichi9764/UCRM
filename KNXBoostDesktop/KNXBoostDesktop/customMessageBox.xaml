<Window x:Class="KNXBoostDesktop.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="200" Width="400" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Border Background="#FF6200EE" CornerRadius="10" Padding="10">
            <StackPanel>
                <TextBlock Name="MessageText" Text="Your message here" Foreground="White" FontSize="16" Margin="10" TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                    <Button Name="OkButton" Content="OK" Width="75" Height="30" Margin="5" Click="OkButton_Click"/>
                    <Button Name="CancelButton" Content="Cancel" Width="75" Height="30" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>