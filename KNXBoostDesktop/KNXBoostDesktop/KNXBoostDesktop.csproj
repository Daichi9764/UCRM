<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>icon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <None Update="KNX_logo.svg.ico">
        <DependentUpon>MainWindow.xaml</DependentUpon>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Page Update="ZipPasswordInputWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="SettingsWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="DeepL.net" Version="1.9.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="resources\settingsIcon.png" />
      <Resource Include="resources\settingsIcon.png" />
      <None Remove="resources\checkmark.png" />
      <Resource Include="resources\checkmark.png" />
      <None Remove="resources\cross.png" />
      <Resource Include="resources\cross.png" />
      <None Remove="resources\whitecross.png" />
      <Resource Include="resources\whitecross.png" />
    </ItemGroup>

</Project>
