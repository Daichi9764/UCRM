<Window x:Class="KNXBoostDesktop.GroupAddressRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Height="265" Width="500"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#F5F5F5"
        BorderThickness="1.5"
        BorderBrush="#369226"
        Closing="ClosingSettingsWindow">

    <Window.Resources>
        <!-- Style pour le bouton de fermeture de la fenêtre -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C75150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Image Width="16" Height="16" Margin="5,0,5,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
                                                <DrawingGroup Opacity="1">
                                                    <DrawingGroup Opacity="1">
                                                        <GeometryDrawing Brush="White" Geometry="F1 M200,200z M0,0z M99.63,120.8C72.17,148.17 46.48,173.78 20.39,199.78 13.61,192.76 7.41,186.34 0,178.66 25.77,153.17 51.75,127.46 77.55,101.93 51.64,76.29 25.89,50.81 0.71,25.89 8.13,18.48 14.31,12.29 20.73,5.88 45.36,30.49 71.13,56.23 96.6,81.68 124.58,53.7 151.26,27.02 178.29,0 186.31,8.18 192.53,14.53 200,22.15 173.32,48.58 146.55,75.1 119.98,101.43 146.76,127.82 173.39,154.06 199.66,179.93 191.94,187.46 185.67,193.59 179.11,200 153.67,174.65 127.03,148.11 99.63,120.8z" />
                                                    </DrawingGroup>
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B73B3B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour le bouton de reinitialisation -->
        <Style x:Key="SquareButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#A9A9A9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="0,-5,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- En-tête (header) -->
            <RowDefinition Height="*"/>
            <!-- Contenu de la fenêtre (corps) -->
            <RowDefinition Height="40"/>
            <!-- Footer avec les boutons save/cancel -->
        </Grid.RowDefinitions>

        <!-- En-tête de la fenêtre -->
        <Viewbox Grid.Row="0" HorizontalAlignment="Left" MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <StackPanel Orientation="Vertical" Background="Transparent" Width="500">
                <!-- Icone + titre paramètres -->
                <StackPanel Orientation="Horizontal">
                    <Image Height="30" Width="30" Margin="14,10,5,0" VerticalAlignment="Center">
                        <Image.Source>
                            <DrawingImage>
                                <DrawingImage.Drawing>
                                    <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
                                        <DrawingGroup Opacity="1">
                                            <DrawingGroup Opacity="1">
                                                <GeometryDrawing Brush="#FF000000" Geometry="F1 M200,200z M0,0z M153.94,153.7C153.94,159.05 153.94,163.99 153.94,169.22 155.6,169.22 157.17,169.2 158.75,169.22 163.05,169.29 166.33,172.59 166.35,176.84 166.37,181.12 163.13,184.55 158.87,184.58 149.42,184.63 139.97,184.63 130.51,184.58 126.24,184.56 122.98,181.14 122.99,176.88 123,172.62 126.27,169.29 130.56,169.23 133.11,169.19 135.65,169.22 138.33,169.22 138.33,123.02 138.33,77.02 138.33,30.77 135.71,30.77 133.16,30.79 130.62,30.77 126.2,30.73 122.73,27.34 122.72,23.1 122.71,18.83 126.14,15.42 130.58,15.41 139.95,15.38 149.32,15.38 158.7,15.41 163.02,15.43 166.31,18.74 166.35,22.98 166.38,27.37 163.11,30.7 158.68,30.77 157.17,30.79 155.66,30.77 154,30.77 154,35.77 154,40.61 154,45.77 154.87,45.77 155.72,45.77 156.56,45.77 165.69,45.77 174.82,45.72 183.96,45.79 192.02,45.85 198.06,50.66 199.73,58.25 199.98,59.41 199.99,60.63 199.99,61.83 200,87.06 200,112.29 200,137.52 200,147.04 193.47,153.63 183.86,153.69 174.81,153.75 165.76,153.7 156.7,153.7 155.84,153.7 154.97,153.7 153.94,153.7z M153.98,61.53C153.98,87.05 153.98,112.45 153.98,137.91 164.22,137.91 174.33,137.91 184.45,137.91 184.45,112.35 184.45,86.95 184.45,61.53 174.22,61.53 164.16,61.53 153.98,61.53z" />
                                                <GeometryDrawing Brush="#FF000000" Geometry="F1 M200,200z M0,0z M15.5,61.41C15.5,87.04 15.5,112.4 15.5,138.07 16.58,138.07 17.59,138.07 18.59,138.07 50.8,138.07 83.01,138.07 115.21,138.07 120.46,138.07 123.92,140.96 124.15,145.45 124.35,149.38 121.88,152.61 117.99,153.42 117.06,153.61 116.09,153.69 115.14,153.69 82.29,153.7 49.44,153.71 16.59,153.7 8.14000000000002,153.7 2.02000000000002,149.04 0.290000000000017,141.3 0.0200000000000169,140.07 0.0100000000000169,138.76 0.0100000000000169,137.49 0,112.33 0,87.17 0,62.02 0,52.48 6.49,45.88 16.1,45.79 24.75,45.71 33.41,45.77 42.06,45.77 66.34,45.77 90.61,45.76 114.89,45.78 120.06,45.78 123.53,48.77 123.72,53.28 123.87,56.95 121.47,60.23 117.88,61.04 116.65,61.32 115.34,61.39 114.07,61.39 82.34,61.41 50.62,61.4 18.89,61.4 17.85,61.41 16.82,61.41 15.5,61.41z" />
                                            </DrawingGroup>
                                        </DrawingGroup>
                                    </DrawingGroup>
                                </DrawingImage.Drawing>
                            </DrawingImage>
                        </Image.Source>
                    </Image>
                    <TextBlock x:Name="GroupAddressRenameWindowTopTitle" FontFamily="Aptos" FontWeight="Bold" FontSize="22" VerticalAlignment="Center" Margin="0, 12, 0, 0"/>
                </StackPanel>

                <!-- Bouton de fermeture de la fenêtre -->
                <Canvas>
                    <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Height="30" Width="50" FontFamily="Aptos" BorderThickness="0" Click="CancelButtonClick" Canvas.Top="-45" Canvas.Left="450" />
                </Canvas>

                <!-- Trait de séparation -->
                <Path x:Name="HeaderPath" Stroke="#D7D7D7" StrokeThickness="2">
                    <Path.Data>
                        <LineGeometry StartPoint="15,10" EndPoint="485,10" />
                    </Path.Data>
                </Path>
            </StackPanel>
        </Viewbox>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <!-- Espacement à gauche -->
                <ColumnDefinition Width="*"/>
                <!-- Corps de la fenêtre -->
                <ColumnDefinition Width="10"/>
                <!-- Espacement à droite -->
            </Grid.ColumnDefinitions>

            <!-- Conteneur principal (corps de la fenêtre) -->
            <Border x:Name="MainContentBorder" Grid.Column="1" Margin="10" BorderBrush="#D7D7D7" BorderThickness="1">
                <StackPanel x:Name="MainContentPanel" Background="White">
                    <TextBlock x:Name="BeforeText" Margin="10,10,0,2" FontFamily="Aptos" FontSize="17" FontWeight="SemiBold" />
                    <TextBox x:Name="BeforeTextBox" Margin="10,0,10,10" Height="30" IsReadOnly="True" Background="#F5F5F5" BorderBrush="#B8B8B8" />
                    <TextBlock x:Name="AfterText" Margin="10,0,0,0" FontFamily="Aptos" FontSize="17" FontWeight="SemiBold" />
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox  Grid.Column="0" x:Name="AfterTextBox" Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Content="⟲" FontSize="24" x:Name="AfterTextBoxButton" Click="Reset" Style="{StaticResource SquareButtonStyle}">
                     </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>


        <!-- Partie basse de la fenêtre (boutons sauvegarder et annuler) -->
        <StackPanel x:Name="SettingsWindowFooter" Grid.Row="2" Orientation="Vertical" Margin="0,5,0,0" Background="White">

            <!-- Trait de séparation -->
            <Path x:Name="FooterPath" Stroke="#D7D7D7" StrokeThickness="2">
                <Path.Data>
                    <LineGeometry StartPoint="0,1" EndPoint="500,1" />
                </Path.Data>
            </Path>

            <!-- Bouton de sauvegarde et d'annulation -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <!-- Bouton save -->
                <Button x:Name="SaveButton" Height="32" Background="Transparent" BorderThickness="0" Click="SaveButtonClick">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="20" Height="20" Margin="5,0,5,0" VerticalAlignment="Center">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
                                            <DrawingGroup Opacity="1">
                                                <DrawingGroup Opacity="1">
                                                    <GeometryDrawing x:Name="SaveButtonDrawing" Brush="#FF000000" Geometry="F1 M200,200z M0,0z M71.85,170.17C47.88,145.5 24.91,121.87 1.22,97.48 7.66,91.43 13.61,85.84 18.82,80.94 37.15,98.28 55.11,115.27 73.63,132.78 109.14,99.25 145.32,65.08 181.76,30.68 187.89,36.72 193.64,42.39 200.01,48.67 157.4,89.05 115.09,129.17 71.85,170.17z" />
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingGroup>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                        <TextBlock x:Name="SaveButtonText" FontWeight="Regular" VerticalAlignment="Center" FontFamily="Aptos" FontSize="16" HorizontalAlignment="Center" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>

                <!-- Bouton cancel -->
                <Button x:Name="CancelButton" Height="32" FontFamily="Aptos" Background="Transparent" BorderThickness="0" Margin="25,0,0,0" Click="CancelButtonClick">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Margin="5,0,5,0" VerticalAlignment="Center">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <DrawingGroup ClipGeometry="M0,0 V200 H200 V0 H0 Z">
                                            <DrawingGroup Opacity="1">
                                                <DrawingGroup Opacity="1">
                                                    <GeometryDrawing x:Name="CancelButtonDrawing" Brush="#FF000000" Geometry="F1 M200,200z M0,0z M99.63,120.8C72.17,148.17 46.48,173.78 20.39,199.78 13.61,192.76 7.41,186.34 0,178.66 25.77,153.17 51.75,127.46 77.55,101.93 51.64,76.29 25.89,50.81 0.71,25.89 8.13,18.48 14.31,12.29 20.73,5.88 45.36,30.49 71.13,56.23 96.6,81.68 124.58,53.7 151.26,27.02 178.29,0 186.31,8.18 192.53,14.53 200,22.15 173.32,48.58 146.55,75.1 119.98,101.43 146.76,127.82 173.39,154.06 199.66,179.93 191.94,187.46 185.67,193.59 179.11,200 153.67,174.65 127.03,148.11 99.63,120.8z" />
                                                </DrawingGroup>
                                            </DrawingGroup>
                                        </DrawingGroup>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                        <TextBlock x:Name="CancelButtonText" FontWeight="Regular" VerticalAlignment="Center" FontFamily="Aptos" FontSize="16" HorizontalAlignment="Center" Margin="0,0,5,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
